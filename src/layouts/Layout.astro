---
import { initializeScrollObserver } from '../utils/intersection-observer';

interface Props {
  title: string;
  description?: string;
}

const DEFAULT_DESCRIPTION = 'The ultimate companion for motorcyclists and cyclists. Track your rides, capture memories, and join a community of passionate riders.';
const { title, description = DEFAULT_DESCRIPTION } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="antialiased bg-black">
    <slot />
    <script>
      import { initializeScrollObserver } from '../utils/intersection-observer';

      document.addEventListener('DOMContentLoaded', () => {
        initializeScrollObserver();
      });
    </script>
  </body>
</html>
